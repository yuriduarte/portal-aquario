<%= form_for([:admin, research]) do |f| %>
  <% if research.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(research.errors.count, "error") %> prohibited this research from being saved:</h2>

      <ul>
      <% research.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <form>     
        <div class="row mb-2"> 
          <div class="col-4">            
            <%= f.label :author %>
            <%= f.text_field :author, class:'form-control' %>
          </div> 
          <div class="col-4">            
            <%= f.label :tank_id %>        
            <%= f.select :tank_id, Tank.order(:order).map{ |t| [t.name_pt_br, t.id] }, class:'form-control', placeholder:'Ex: Águas Vivas' %>
          </div>            
        </div>  
      <div class="row mb-2"> 
        <div class="col-4">            
          <%= f.label :title_pt_br %>
          <%= f.text_field :title_pt_br, class:'form-control' %>
        </div>   

        <div class="col-4">            
          <%= f.label :title_en_us %>
          <%= f.text_field :title_en_us, class:'form-control' %>
        </div>    

        <div class="col-4">            
          <%= f.label :title_es_es %>
          <%= f.text_field :title_es_es, class:'form-control' %>
        </div>
      </div>

      <div class="row mb-2">        
        <div class="col-4">  
        <%= f.label :description_pt_br %>          
          <%= f.text_area :description_pt_br, class:'form-control text-area' %>
        </div>      
        <div class="col-4">  
        <%= f.label :description_en_us %>          
          <%= f.text_area :description_en_us, class:'form-control text-area' %>
        </div>
        <div class="col-4">            
          <%= f.label :description_es_es %>
          <%= f.text_area :description_es_es, class:'form-control text-area' %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-4">            
          <%= f.label :image %>
          <%= f.file_field :image %> <br>
          <%= image_tag(@research.image.url(:thumb), class: 'img-tumb')%>  
        </div>                   
      </div>
    </form>
    <div class="actions">
      <%= f.submit f.object.new_record? ? 'Criar' : 'Atualizar', class:'btn btn-success' %>
      <%= link_to "Visualizar como Usuário", researches_path(f.object.id), class:'btn btn-success' %>
    </div>
  </div>
<% end %>
