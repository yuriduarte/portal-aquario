<div class="container header">
  <div class="row">
    <div class="col band-libras fixed-top-libras">
      <!-- Button trigger modal -->
      <%= link_to "#" do %>
        <%= image_tag "botoes/btn-libras.png", class: 'img-responsive bandeiras-libras', "data-toggle" => "modal", "data-target" => "#ModalLibras" %>  
      <% end %>         
      <%= link_to "#" do %>
        <%= image_tag "botoes/btn-audio.png", class: 'img-responsive bandeiras-libras', "data-toggle" => "modal", "data-target" => "#ModalAudio" %>  
      <% end %>       
    </div> 
    <!-- Modal Libras -->
    <div class="modal fade" id="ModalLibras" tabindex="-1" role="dialog" aria-labelledby="ModalLibrasTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalLibrasTitle"><%= @tank.name(language) %> - Libras</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="embed-responsive embed-responsive-4by3">
              <% @researches.each do |r| %>
                <iframe class="embed-responsive-item" src="<%= r.link_libras %>"></iframe>
              <% end %>              
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal Audio -->
    <div class="modal stop-video-on-close fade" id="ModalAudio" tabindex="-1" role="dialog" aria-labelledby="ModalAudioTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalAudioTitle"><%= @tank.name(language) %> - √Åudio</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="embed-responsive embed-responsive-4by3">
              <% @researches.each do |r| %>
                <iframe class="embed-responsive-item youtube-video" src="<%= r.link_audio %>"></iframe>
              <% end %>  
            </div>
            <div class="mt-5"><a href="#" class="play-video">Play Video</a></div>
    <div><a href="#" class="stop-video">Stop Video</a></div>
    <div><a href="#" class="pause-video">Pause Video</a></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    

<div class="container header">
  <div class="row pesquisa">
    <div class="col mt-5">
      <%= link_to "/" do %>
        <%= image_tag "logo/logo_pesquisa.png", class: 'logo-pesquisa' %>  
      <% end %>
    </div>    
  </div>
</div>
<div class="container">
  <h4 class="text-center titulo-pesquisa"><%= @tank.name(language) %></h4>
  <div class="card-deck">
    <% @researches.each do |r| %>
      <div class="card cartao">
        <%= image_tag(r.image.url(:research), class: 'card-img-top')%>
        <div class="card-body">
          <h5 class="card-title text-center"><%= r.title(language) %></h5><hr>
          <p class="card-text"><%= r.description(language) %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted"> <%= r.author.join(', ') %> </small>
        </div>
      </div>
    <% end %>
    <div class="header mb-5">
      <%= link_to t('home.buttons.other_researches'), researches_path, class: 'botao bt-home' %>
    </div>
  </div>
</div>
